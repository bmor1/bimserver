<project name="Ifc">
	<target name="jar">
		<mkdir dir="builds" />
		<mkdir dir="BuildIfc" />
		<mkdir dir="BuildIfc/classes" />
		<javac srcdir="src" destdir="BuildIfc/classes" debug="on" fork="true" memorymaximumsize="256m">
			<src path="../buildingSMARTLibrary/src" />
			<src path="../Utils/src" />
			<src path="../Emf/src" />
			<classpath>
				<fileset dir="lib">
					<include name="*.jar" />
				</fileset>
				<fileset dir="../buildingSMARTLibrary/lib">
					<include name="*.jar" />
				</fileset>
				<fileset dir="../Utils/lib">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
		<copy todir="BuildIfc/classes" file="../buildingSMARTLibrary/data/IFC2X3_FINAL.exp"/>
		<copy tofile="BuildIfc/classes/org/bimserver/ifc/emf/Ifc2x3/impl/Ifc2x3.ecore" file="model/IFC2X3.ecore"/>
		<jar jarfile="builds/ifc.jar">
			<fileset dir="BuildIfc/classes" />
		</jar>
		<delete dir="BuildIfc"></delete>
	</target>
</project>